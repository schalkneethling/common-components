{
  "name": "fiori-common-components",
  "description": "A collection of commonly used components with no external dependencies.",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "prettier:lint": "prettier .",
    "prettier:format": "prettier --write .",
    "svg:sprite": "svg-symbol-sprite -i ./components/svg-icon/icons/ -o ./components/svg-icon/sprite.svg",
    "lint:js": "eslint .",
    "lint:css": "stylelint **/*.css",
    "test": "vitest",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:chromium": "playwright test --project=chromium"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.4.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-order": "^6.0.4",
    "svg-symbol-sprite": "^1.5.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "zod": "^4.1.8"
  }
}
